arith.l
%{
#include "y.tab.h"
%}
%%
[0-9]+ { return NUMBER; }
"+" { return '+'; }
"-" { return '-'; }
"*" { return '*'; }
"/" { return '/'; }
"(" { return '('; }
")" { return ')'; }
[ \t] { /* ignore whitespace */ }
\n { return 0; }
. { return yytext[0]; }
%%
int yywrap() {
 return 1;
}


arith.y
%{
#include <stdio.h>
#include <stdlib.h>
int yylex();
void yyerror(const char *s);
%}
%token NUMBER
%left '+' '-'
%left '*' '/'
%left UMINUS
%%
expr: expr '+' expr { printf("Addition performed\n"); }
 | expr '-' expr { printf("Subtraction performed\n"); }
 | expr '*' expr { printf("Multiplication performed\n"); }
 | expr '/' expr { printf("Division performed\n"); }
 | '-' expr %prec UMINUS { printf("Unary minus applied\n"); }
 | '(' expr ')' { printf("Parentheses processed\n"); }
 | NUMBER { printf("Number recognized\n"); }
 ;
%%
void yyerror(const char *s) {
 fprintf(stderr, "Error: %s\n", s);
}
int main() {
 printf("Enter arithmetic expression:\n");
 yyparse();
 printf("Expression parsed successfully!\n");
 return 0;
}
